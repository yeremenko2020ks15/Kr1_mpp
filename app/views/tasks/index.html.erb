<h1>Tasks</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>State</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr bgcolor="#2f4f4f">
      <td><%= task.name %></td>
      <td><%= task.description %></td>
      <td><%= task.status %></td>
      <td><%= link_to 'Check', task %></td>
      <td><%= link_to 'Redact', edit_task_path(task) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create new task', new_task_path %>